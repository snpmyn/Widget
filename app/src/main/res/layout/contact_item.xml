<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px1"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contractItemTvStickyDecoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@color/gray"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_6"
        android:textColor="@color/fontHint"
        android:textSize="@dimen/sp_14"
        android:visibility="visible"
        tools:text="A" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <TextView
            android:id="@+id/contractItemTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:gravity="center"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14"
            tools:text="张三" />

        <TextView
            android:id="@+id/contractItemTvCellPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_13"
            tools:text="13652158452" />
    </LinearLayout>
</LinearLayout>