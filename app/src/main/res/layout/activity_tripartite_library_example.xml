<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="example.tripartitelibrary.TripartiteLibraryExampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tripartiteLibraryExampleActivityMbMatisse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/matisse"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tripartiteLibraryExampleActivityMbScanCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scanCode"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tripartiteLibraryExampleActivityMbBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/banner"
            android:textAppearance="?android:attr/textAppearanceInverse" />
    </LinearLayout>
</ScrollView>
