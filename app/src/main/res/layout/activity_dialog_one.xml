<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.DialogOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:contentDescription="@string/toDo"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/showMaterialProgress"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbShowMaterialProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/aBasicMessage"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbBasicMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/a_title_with_a_text_under"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbTitleWithTextUnder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/showErrorMessage"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbShowErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/aSuccessMessage"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbSuccessMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/a_warning_message_with_a_listener_bind_to_the_confirm_button"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbWarningMessageWithConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/aWarningMessageWithListenersBindToCancelAndConfirmButton"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbWarningMessageWithCancelAndConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />

        <TextView
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:text="@string/a_message_with_a_custom_image"
            android:textColor="@color/fontInput"
            android:textSize="@dimen/sp_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogOneActivityMbMessageWithCustomImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tryMe"
            android:textAppearance="?android:attr/textAppearanceInverse" />
    </LinearLayout>
</ScrollView>