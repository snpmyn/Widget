<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_8"
    android:paddingRight="@dimen/dp_10">

    <EditText
        android:id="@+id/baseDialogCommentEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/color00bb29_stroke_c4"
        android:gravity="top"
        android:hint="@string/commentInputHint"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        tools:ignore="Autofill,TextFields" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/baseDialogCommentIvAt"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/at"
            android:contentDescription="@string/toDo" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toEndOf="@id/baseDialogCommentIvAt"
            android:background="@drawable/smile"
            android:contentDescription="@string/toDo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/color00bb29_stroke_c4"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/publishComment"
            android:textColor="@color/color00bb29"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</LinearLayout>