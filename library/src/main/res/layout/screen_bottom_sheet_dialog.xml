<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_4">

        <View
            android:id="@+id/screenBottomSheetDialogView"
            android:layout_width="?actionBarSize"
            android:layout_height="@dimen/dp_6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/gray_solid_semi_circle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/screenBottomSheetDialogMbResetting"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screenBottomSheetDialogView"
            android:text="@string/resetting"
            android:textSize="@dimen/sp_13" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/screenBottomSheetDialogMbEnsure"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screenBottomSheetDialogView"
            android:layout_alignParentEnd="true"
            android:text="@string/ensure"
            android:textSize="@dimen/sp_13"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/screenBottomSheetDialogRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />
</LinearLayout>