<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/transitionViewViewSpread"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerInParent="true"
        android:background="@drawable/orange_solid_semi_circle" />

    <TextView
        android:id="@+id/transitionViewTvLoggingIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/transitionViewViewLine"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/loggingIn"
        android:textColor="@color/background"
        android:textSize="@dimen/sp_16"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/transitionViewTvSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/transitionViewTvLoggingIn"
        android:layout_centerHorizontal="true"
        android:text="@string/success"
        android:textColor="@color/background"
        android:textSize="@dimen/sp_16"
        android:visibility="invisible" />

    <View
        android:id="@+id/transitionViewViewLine"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_2"
        android:layout_centerInParent="true"
        android:background="@color/background"
        android:visibility="invisible" />
</RelativeLayout>