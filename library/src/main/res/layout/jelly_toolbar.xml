<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">
    <!--FrameLayout、MaterialToolbar原80dp（可沉浸式）-->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/jellyToolbarMt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/jellyToolbarTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </com.google.android.material.appbar.MaterialToolbar>

    <com.zsp.library.jellytoolbar.widget.JellyView
        android:id="@+id/jellyToolbarJv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--ContentLayout原?actionBarSize（可沉浸式）-->
    <com.zsp.library.jellytoolbar.widget.ContentLayout
        android:id="@+id/jellyToolbarCl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>