<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/searchHistoryItemTvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_toStartOf="@+id/searchHistoryItemIvDelete"
        android:drawableStart="@drawable/ic_history_to_search_history_item"
        android:drawablePadding="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:textColor="@color/fontHint"
        android:textSize="@dimen/sp_13"
        tools:text="历史记录" />

    <ImageView
        android:id="@+id/searchHistoryItemIvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/toDo"
        android:padding="@dimen/dp_12"
        app:srcCompat="@drawable/ic_clear_to_search_edit_text_and_search_history_item" />
</RelativeLayout>